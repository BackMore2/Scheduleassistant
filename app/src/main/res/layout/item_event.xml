<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/surface"
    app:cardElevation="2dp"
    app:cardMaxElevation="4dp"
    android:stateListAnimator="@anim/selector_card_elevation"
    android:transitionName="event_item">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            android:buttonTint="@color/primary" />

        <View
            android:id="@+id/color_bar"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="?attr/colorPrimary" 
            android:transitionName="event_color_bar"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/on_surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:transitionName="event_title"/>

            <TextView
                android:id="@+id/tv_meta"
                android:textSize="13sp"
                android:textColor="@color/on_surface_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:transitionName="event_meta"/>

            <TextView
                android:id="@+id/tv_badge"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/event_badge_bg"
                android:textColor="@android:color/white"
                android:visibility="gone"
                android:transitionName="event_badge"/>

            <LinearLayout
                android:id="@+id/expand_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingTop="8dp"
                android:animateLayoutChanges="true">

                <TextView
                    android:id="@+id/tv_notes"
                    android:textSize="13sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_repeat"
                    android:textSize="12sp"
                    android:textColor="@color/on_surface_variant"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_checkin"
                    android:text="打卡"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginTop="8dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        android:text="编辑"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.App.Button.Text"
                        android:textColor="@color/primary"
                        app:rippleColor="@color/primary"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete"
                        android:text="删除"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Widget.App.Button.Text"
                        android:textColor="@color/error"
                        app:rippleColor="@color/error"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_chevron"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            app:tint="?attr/colorPrimary"
            android:contentDescription="更多"
            android:transitionName="event_chevron"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
