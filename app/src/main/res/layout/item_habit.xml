<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/surface"
    app:cardElevation="2dp"
    android:stateListAnimator="@anim/selector_card_elevation"
    android:transitionName="habit_item"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/on_surface_variant" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_checkin"
                android:text="打卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.App.Button"
                app:rippleColor="@color/on_primary"
                app:shapeAppearance="@style/ShapeAppearance.ScheduleAssistant.MediumComponent" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                android:text="编辑"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.App.Button.Outlined"
                app:rippleColor="@color/primary"
                app:shapeAppearance="@style/ShapeAppearance.ScheduleAssistant.MediumComponent"
                android:layout_marginEnd="4dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_delete"
                android:text="删除"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.App.Button.Text"
                app:rippleColor="@color/error"
                app:shapeAppearance="@style/ShapeAppearance.ScheduleAssistant.MediumComponent"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
