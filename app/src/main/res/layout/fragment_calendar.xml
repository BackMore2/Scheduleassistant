<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@color/surface"
        android:elevation="2dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingVertical="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_prev_month"
                style="@style/Widget.App.Button.Icon"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:contentDescription="上个月"
                app:backgroundTint="@color/surface_variant"
                app:icon="@android:drawable/ic_media_previous"
                app:iconTint="@color/on_surface"
                app:rippleColor="@color/primary" />
            <TextView
                android:id="@+id/tv_month"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/on_surface"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_next_month"
                style="@style/Widget.App.Button.Icon"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:contentDescription="下个月"
                app:backgroundTint="@color/surface_variant"
                app:icon="@android:drawable/ic_media_next"
                app:iconTint="@color/on_surface"
                app:rippleColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search_top"
                style="@style/Widget.App.Button.Icon"
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:contentDescription="搜索"
                app:backgroundTint="@color/surface_variant"
                app:icon="@android:drawable/ic_menu_search"
                app:iconTint="@color/on_surface"
                app:rippleColor="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_more_top"
                style="@style/Widget.App.Button.Icon"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:contentDescription="更多"
                app:backgroundTint="@color/surface_variant"
                app:icon="@android:drawable/ic_menu_more"
                app:iconTint="@color/on_surface"
                app:rippleColor="@color/primary" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:id="@+id/week_header"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/surface_variant">
        <TextView android:text="一" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/on_surface_variant" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="二" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/on_surface_variant" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="三" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/on_surface_variant" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="四" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/on_surface_variant" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="五" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/on_surface_variant" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="六" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/tertiary" android:textSize="14sp" android:textStyle="normal"/>
        <TextView android:text="日" android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textColor="@color/tertiary" android:textSize="14sp" android:textStyle="normal"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/week_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/event_list"
        tools:listitem="@android:layout/simple_list_item_1"
        android:background="@color/surface"
        android:clipToPadding="false"
        android:paddingVertical="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@android:layout/simple_list_item_2"
        android:background="@color/surface"
        android:clipToPadding="false"
        android:paddingBottom="16dp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/empty_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/calendar_grid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="64dp"
        app:cardBackgroundColor="@color/surface_variant"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/tv_empty"
            android:text="无日程"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="32dp"
            android:textColor="@color/on_surface_variant"
            android:textSize="16sp"
            android:textStyle="normal" />
    </com.google.android.material.card.MaterialCardView>

    <!-- 分享模式底部栏 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/share_bottom_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardBackgroundColor="@color/primary"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        android:layout_margin="16dp"
        android:visibility="gone">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="center_vertical">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_select_all"
                android:text="全选"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                style="@style/Widget.App.Button.Text"
                android:textColor="@color/on_primary"
                android:textSize="16sp"
                app:rippleColor="@color/on_primary"/>
            
            <TextView
                android:id="@+id/tv_share_count"
                android:text="已选 0 项"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/on_primary"
                android:textSize="16sp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:text="取消"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button.TonalButton"
                app:backgroundTint="@color/primary_container"
                android:textColor="@color/on_primary_container"
                android:textSize="14sp"
                app:cornerRadius="20dp"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_export"
                android:text="导出"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                style="@style/Widget.App.Button"
                app:backgroundTint="@color/on_primary"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
